#!/bin/sh

case $BUTTON in
	1) notify-send "ðŸ§  Memory hogs" "$(ps axch -o cmd:15,%mem --sort=-%mem | head)" ;;
	2) setsid -f "$TERMINAL" -e htop ;;
	3) notify-send "ðŸ§ Memory module" "\- Shows Memory Used/Total.
- Click to show memory hogs.
- Middle click to open htop." ;;
	6) "$TERMINAL" -e "$EDITOR" "$0" ;;
esac

# Display memory in binary system: base 2 (binary) measurements
# free --mebi | sed -n '2{p;q}' | awk '{printf ("ï‹› %2.2fGiB/%2.2fGiB\n", ( $3 / 1024), ($2 / 1024))}'

# Display memory in decimal system: base 10 (decimal) measurements
free --mebi | sed -n '2{p;q}' | awk '{printf ("ï‹› %.1f/%.fGB\n", ( $3 / 1000), ($2 / 1000))}'
